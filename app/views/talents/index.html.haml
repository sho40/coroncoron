= render 'homes/header'
.talent-index
  .talent-index__talent-list
    - @talents.each do |t|
      .talent-index__talent-list__box
        = link_to talent_path(t.id) do
          = image_tag(t.images[0].url.url, class: "talent-index__talent-list__box__image")
        .talent-index__talent-list__box__role
          = t.role
        .talent-index__talent-list__box__name
          = t.l_name
          = t.f_name
        .talent-index__talent-list__box__eng-name
          = t.e_l_name
          = t.e_f_name
= render 'homes/footer'

